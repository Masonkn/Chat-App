<Window x:Class="Text_Saver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text_Saver"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--"Click:" and "x:name="txt" are names that are referred to in the C#-->
        <TextBox x:Name="txt" HorizontalAlignment="Left" Height="142" Margin="233,92,0,0" TextWrapping="Wrap" Text="Enter Text Here" VerticalAlignment="Top" Width="273"/>
        <Button Click="Button_Click" Content="Save Text" HorizontalAlignment="Left" Margin="336,315,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
