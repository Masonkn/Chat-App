        <Button Click="PushButton" Content="Push Code" HorizontalAlignment="Left" Margin="116,329,0,0" VerticalAlignment="Top" Width="97" Height="30"/>
        <Button Click="PullButton" Content="Pull Code" HorizontalAlignment="Left" Margin="450,329,0,0" VerticalAlignment="Top" Width="97" Height="30"/>
    </Grid>
